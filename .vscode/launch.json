{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "preLaunchTask": "npm: tsc",
      "name": "Launch Peruse",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "--links",
        ",/links.txt"
      ],
      "program": "${workspaceFolder}/dist/cli.js",
      "console": "integratedTerminal"
    }
  ]
}